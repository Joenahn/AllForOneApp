<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:weightSum = "5"
    android:layout_height="match_parent"
    tools:context=".Navigation">
<RelativeLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:src = "@drawable/logo"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="90dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="All for one service"
            android:layout_marginTop="0dp"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>

    <GridLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="15dp"
        android:layout_height="0dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/shelter"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/shelter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Find Shelters"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bchouse"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/bchousing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="B.C Housing"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/hospital"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/hospital" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Find Hospital"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/panic"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/panic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Panic Button"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/food"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/food" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Food For you"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/lifeguard"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:elevation="3dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="101dp"
                    android:layout_height="80dp"
                    android:layout_weight="2"
                    android:src="@drawable/lifegaurd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Life Guard"
                    android:textSize="18dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>







    </GridLayout>


</LinearLayout>